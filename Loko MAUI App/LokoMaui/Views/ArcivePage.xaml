<?xml version="1.0" encoding="utf-8" ?>
<framework:BaseContentPage
    x:Class="loko.Views.ArcivePage"
    xmlns:framework="clr-namespace:loko.Framework"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
    xmlns:models="clr-namespace:loko.Models"
    xmlns:renderers="clr-namespace:loko.Controls.Renderers"
    xmlns:viewModels="clr-namespace:loko.ViewModels"
    xmlns:xct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    ios:Page.UseSafeArea="true"
    x:DataType="viewModels:ArchivePageViewModel"
    x:TypeArguments="viewModels:ArchivePageViewModel"
    BackgroundColor="{StaticResource SettingsPageBackgrounColor}"
    NavigationPage.HasNavigationBar="False">
    <Grid RowDefinitions="60,*" RowSpacing="0">
        <Grid
            Grid.Row="0"
            BackgroundColor="{StaticResource SettingsPageBackgrounColor}"
            ColumnDefinitions="Auto, *"
            ColumnSpacing="0">

            <Button
                Grid.Column="0"
                BackgroundColor="Transparent"
                Command="{Binding GoBackCommand}"
                FontSize="Medium"
                HorizontalOptions="Start"
                Text="Back"
                TextColor="{DynamicResource WhiteColor}"
                VerticalOptions="Center" />

            <Label
                Grid.Column="0"
                Grid.ColumnSpan="2"
                FontFamily="MontserratMediumFont"
                FontSize="Title"
                HorizontalOptions="Center"
                InputTransparent="True"
                Text="{Binding Title}"
                TextColor="{DynamicResource WhiteColor}"
                VerticalOptions="Center" />

            <Grid.Padding>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS" Value="20, 10, 20, 10" />
                    <On Platform="Droid" Value="20, 10, 20, 10" />
                </OnPlatform>
            </Grid.Padding>
        </Grid>
        <renderers:ExtendedMap
            x:Name="Map"
            Grid.Row="1"
            ItemsSource="{Binding MapItemsSource}"
            MapType="{Binding MapType}">
            <renderers:ExtendedMap.ItemTemplate>
                <DataTemplate x:DataType="renderers:ExtendedPin">
                    <maps:Pin
                        Address="{Binding Address}"
                        Label="{Binding Description}"
                        Location="{Binding Location}" />
                </DataTemplate>
            </renderers:ExtendedMap.ItemTemplate>
        </renderers:ExtendedMap>
        <!--  xct:CornerRadiusEffect.CornerRadius="5"  -->
        <Grid
            Grid.Row="1"
            Margin="20,30"
            Padding="2" ColumnDefinitions="auto"
            BackgroundColor="Transparent"
            HorizontalOptions="Start"
            VerticalOptions="End">
            <Frame
                Padding="0"
                BackgroundColor="{StaticResource InfoWindowBackgroundColorTr80}"
                BorderColor="{StaticResource GreenTealColor}"
                CornerRadius="5"
                HasShadow="False">
                <StackLayout>
                    <xct:Expander x:Name="exp" IsExpanded="True">
                        <xct:Expander.Header>
                            <Grid
                                Padding="5"
                                ColumnDefinitions="20,100 "
                                HorizontalOptions="Center">
                                <Label
                                    Grid.Column="1"
                                    FontFamily="MontserratRegularFont"
                                    FontSize="18"
                                    HorizontalOptions="Center"
                                    Text="DEVICES"
                                    TextColor="{DynamicResource WhiteColor}"
                                    VerticalOptions="Center" />
                                <Image
                                    Grid.Column="0"
                                    HeightRequest="15"
                                    HorizontalOptions="Center"
                                    Source="lokopopupmenuarrowup.png"
                                    VerticalOptions="Center"
                                    WidthRequest="15">
                                    <Image.Triggers>
                                        <DataTrigger
                                            Binding="{Binding Source={RelativeSource AncestorType={x:Type xct:Expander}}, Path=IsExpanded}"
                                            TargetType="Image"
                                            Value="True">
                                            <Setter Property="Source" Value="lokopopupmenuarrowdown.png" />
                                        </DataTrigger>
                                    </Image.Triggers>
                                </Image>
                            </Grid>
                        </xct:Expander.Header>
                    </xct:Expander>
                    <ScrollView IsVisible="{Binding Source={x:Reference Name=exp}, Path=IsExpanded}">
                        <StackLayout Padding="0" BindableLayout.ItemsSource="{Binding DevicesList}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="models:DeviceModel">
                                    <Grid
                                        ColumnDefinitions="20, 100"
                                        HeightRequest="40"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center">
                                        <Image
                                            Grid.Column="0"
                                            HorizontalOptions="Center"
                                            Source="lokovisible.png"
                                            VerticalOptions="Center"
                                            WidthRequest="15">
                                            <Image.Triggers>
                                                <DataTrigger
                                                    Binding="{Binding IsSelected}"
                                                    TargetType="Image"
                                                    Value="false">
                                                    <Setter Property="Source" Value="lokoInvisible.png" />
                                                </DataTrigger>
                                                <DataTrigger
                                                    Binding="{Binding IsSelected}"
                                                    TargetType="Image"
                                                    Value="true">
                                                    <Setter Property="Source" Value="lokovisible.png" />
                                                </DataTrigger>
                                            </Image.Triggers>
                                        </Image>
                                        <Label
                                            Grid.Column="1"
                                            FontFamily="MontserratLightFont"
                                            FontSize="16"
                                            HorizontalOptions="Center"
                                            Text="{Binding Label, StringFormat='ID_{0}'}"
                                            TextColor="{DynamicResource WhiteColor}"
                                            VerticalOptions="Center" />
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}, AncestorLevel=0}, Path=BindingContext.SelectDeviceCommand}" CommandParameter="{Binding}" />
                                        </Grid.GestureRecognizers>

                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
            </Frame>
        </Grid>
    </Grid>
</framework:BaseContentPage>