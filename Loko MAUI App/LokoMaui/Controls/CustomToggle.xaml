<?xml version="1.0" encoding="UTF-8"?>

<Grid
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="loko.Controls.CustomToggle">

    <Grid.RowDefinitions>
        <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Frame
        x:Name="ToggleArea"
        Grid.Row="0"
        CornerRadius="12"
        BackgroundColor="{StaticResource SilverChaliceColor}"
        HasShadow="False"
        IsClippedToBounds="True"
        Padding="0"
        WidthRequest="46"
        HeightRequest="24" />

    <Frame
        x:Name="ToggleStick"
        Grid.Row="0"
        CornerRadius="10"
        BackgroundColor="White"
        HasShadow="False"
        IsClippedToBounds="True"
        Padding="0"
        VerticalOptions="Center"
        HorizontalOptions="Start"
        Margin="2,0"
        HeightRequest="20"
        WidthRequest="20" />

    <Grid.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnToggleTapped" />
    </Grid.GestureRecognizers>
</Grid>